{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% block title %}{{ 'general.administration'|trans}} | {{ 'gallery.galleries'|trans}}{% endblock %}
{% block body %}
    <h1>{{ 'gallery.galleries'|trans}}</h1>
    <div class="section">
        <a  class="btn btn-primary" href="{{ path('gallery_new') }}">{{ 'gallery.create'|trans}} <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    </div>
    <table class="table listtable">
        <tr>
            <th>{{ 'gallery.title'|trans}}</th>
            <th></th>
            <th></th>
        </tr>
    {% for gl in galleries %}
        <tr>
            <td>{{ gl.title }}</td>
            <td><a class="btn-sm btn-primary" href="{{ path('gallery_edit', {'gal_id':gl.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {{ 'general.edit'|trans}}</a></td>
            <td><a class="btn-sm btn-danger" href="{{ path('gallery_delete', {'gal_id':gl.id}) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> {{ 'general.delete'|trans}}</a></td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
