{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% block title %}{{ 'general.administration'|trans}} | {{ 'repertoire.repertoire'|trans}}{% endblock %}
{% block body %}
    <h1>{{ 'repertoire.repertoire'|trans}}</h1>
    <div class="section">
        <a class="btn btn-primary" href="{{ path('repertoire_new') }}">{{ 'repertoire.create'|trans}} <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    </div>
    <table class="table listtable">
        <tr>
            <th>{{ 'repertoire.title'|trans}}</th>
            <th>{{ 'repertoire.current'|trans}}</th>
            <th></th>
            <th></th>
        </tr>
    {% for rep in repertoires %}
        <tr>
            <td>{{ rep.title }}</td>
            <td>{{ rep.active }}</td>
            <td><a class="btn-sm btn-primary" href="{{ path('repertoire_edit', {'rep_id':rep.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {{ 'general.edit'|trans}}</a></td>
            <td><a class="btn-sm btn-danger" href="{{ path('repertoire_delete', {'rep_id':rep.id}) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> {{ 'general.delete'|trans}}</a></td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}