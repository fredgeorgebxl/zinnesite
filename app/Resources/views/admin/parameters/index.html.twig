{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block title %}{{ 'general.administration'|trans}} | {{ 'parameter.parameters'|trans}}{% endblock %}
{% block body %}
    <h1>{{ 'parameter.parameters'|trans}}</h1>
    {{ form_start(form) }}
    {{ form_errors(form.parameters) }}
    <div class="parameters" data-prototype="{{ form_widget(form.parameters.vars.prototype)|e('html_attr') }}">
    {% for paramField in form.parameters %}
        <div class="row space-down">
            {{ form_errors(paramField) }}
            <div class="col-xs-6">{{ form_widget(paramField.name) }}</div>
            <div class="col-xs-6">{{ form_widget(paramField.value) }}</div>
        </div>
    {% endfor %}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}