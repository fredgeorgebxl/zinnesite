{% trans_default_domain 'App' %}
{% extends "admin/base-admin.html.twig" %}
{% block title %}{{ 'general.administration'|trans}} | {{ 'events.events'|trans}}{% endblock %}
{% block body %}
    <h1>{{ 'events.events'|trans}}</h1>
    <div class="section">
        <a  class="btn btn-primary" href="{{ path('event_new') }}">{{ 'events.create'|trans}} <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    </div>
    <table class="table listtable">
        <tr>
            <th>{{ 'events.name'|trans}}</th>
            <th>{{ 'events.date'|trans}}</th>
            <th></th>
            <th></th>
        </tr>
    {% for ev in events %}
        <tr>
            <td>{{ ev.name }}</td>
            <td>{{ ev.date|date('d/m/Y') }}</td>
            <td><a class="btn-sm btn-primary" href="{{ path('event_edit', {'ev_id':ev.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {{ 'general.edit'|trans}}</a></td>
            <td><a class="btn-sm btn-danger" href="{{ path('event_delete', {'ev_id':ev.id}) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> {{ 'general.delete'|trans}}</a></td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
