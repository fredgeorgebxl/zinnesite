{% trans_default_domain 'App' %}
{% extends 'base.html.twig' %}
{% block title %}{{ 'website.title'|trans }} | {{ 'website.photos'|trans }}{% endblock %}
{% block body %}
    <div class="column row">
        <h1>{{ 'website.photos'|trans }}</h1>
        <div class="row">
        {% for gallery in galleries %}
            <div class="small-12 medium-4 large-3 columns end">
                <a href="{{ path('gallery', {'slug': gallery.slug}) }}">
                    <h3>{{ gallery.title }}</h3>
                    <div>{{ styled_image(gallery.pictures[0], 'project_thumb') }}</div>
                </a>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}