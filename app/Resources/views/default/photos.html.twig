{% trans_default_domain 'App' %}
{% extends 'base.html.twig' %}
{% block title %}{{ 'website.title'|trans }} | {{ 'website.photos'|trans }}{% endblock %}
{% block body %}
    <div class="column row">
        <h1>{{ 'website.photos'|trans }}</h1>
        <div class="row">
        {% for gallery in galleries %}
            <div class="small-12 medium-4 large-3 columns end">
                <a href="{{ path('gallery', {'slug': gallery.slug}) }}">
                    <h3>{{ gallery.title }}</h3>
                    <div class="galleryfront">
                        {% for i in 2..0 %}
                            {% if gallery.pictures[i] is defined %}
                                {{ class_styled_image(gallery.pictures[i], 'project_thumb', 'galleryfront-'~(i+1)) }}
                            {% endif %}
                        {% endfor %}
                    </div>
                </a>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}